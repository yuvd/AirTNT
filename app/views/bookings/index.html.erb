<div class='banner_show ' style="background-image: url('https://ksr-ugc.imgix.net/assets/011/221/272/390f81f43ef2f84bda1987792e3aad90_original.jpg?ixlib=rb-2.1.0&w=700&fit=max&v=1463423047&auto=format&frame=1&q=92&s=0290d890dcdf0f74c40ae948a3d095a4')">

</div>

<div class='container booking_container'>
<h2 class="title mt-5"> Your Bookings
  </h2>
  <div class="box">
  </div>

 <!-- mapbox -->
<div class="mt-3 card-trip">
  <div
    id="map"
    style="width: 100%;
    height: 400px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  > </div>
  </div>

  <div class="container cards_booking">
    <% @bookings.each do |booking| %>
  <div class="card-trip card-scroll mb-3">
   <div class="pic_booking"> <%= image_tag  booking.unit.photo %>
   </div>

    <div class="card-trip-infos">
      <div>
        <h3 class="title"> <%= booking.unit.name%></h3>
        <p><%= booking.start_date %></p>

       <div class="d-flex justify-content-between">
          <div class='target_img'>
         <% image_tag 'Target red' %>
          </div>
          <div>
            <p><%= booking.target_name %></p>
            <p><%= booking.target_address %></p>
          <p><%= booking.start_date %></p>
          </div>
       </div>


        <h3 class="title mt-5"> About This Unit</h3>
         <p><%= booking.unit.description %></p>
         <p></p>
         <div class="d-flex align-items-start mt-4">
          <p class="title mr-2"><%= link_to "ðŸ—‘", booking_path(booking), method: 'delete', data: {confirm: "Deleting the unit. Are you sure?"} %></p>

          <p><%= link_to 'Edit', edit_booking_path(booking) %><i class="fas fa-pencil-alt"></i></p>
        </div>

      </div>
    </div>
  </div>

  <% end %>
  </div>

</div>
