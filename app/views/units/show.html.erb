
<div class='banner_showpage' style="background-image: url(<%= @unit.photo %>);">
  <div class="container">
    <h1 class='mt-3'><%=  @unit.name %></h1>
    <p></p>
  </div>
</div>

<div class='container'>

  <!-- <div class='d-flex flex-row bd-highlight mb-3'>
    <p><%= link_to "Go back to home page", root_path %></p>
  </div> -->
   <div class="card card-header mt-3 mb-3 border-radius border shadow-sm p-3 mb-1">
    <div class="d-flex justify-content-between font-weight-bold">
    <p>Details</p>
    <p>
    <%if current_user == @unit.user%>
    <%= link_to "Delete Unit ðŸ—‘", units_path, method: :delete, data: {confirm: "Deleting the unit. Are you sure?"} %>
    <%end%>
    </p>
    </div>
  </div>


<div class="card p-3 mt-3 shadow-sm p-3 mb-1">
  <p >CATEGORY</p>
  <%= @unit.category %>
</div>


<div class="card p-3 mt-3 shadow-sm p-3 mb-1">
  <p>DESCRIPTION:</p>
  <%= @unit.description %>
</div>

<%unless current_user == @unit.user%>
<div class="card p-3 mt-3 shadow-sm p-3 mb-1">
  <p>BOOK THIS UNIT</p>
  <%= render 'form_book_unit', booking: @booking, unit: @unit %>
</div>
<%else%>
<div class="bg-white mt-3 shadow-sm p-3 mb-1">
  <p>PENDING BOOKING REQUESTS</p>
   <div class="box-scroll">
  <div class="cards-scroll">
    <% @unit.bookings.each do |booking| %>
      <%if booking.pending%>
      <div class="unit-card" style="text-align: center;">
        <h1><%=booking.target_name%></h1>
        <p><%=booking.target_address%></p>
        <p><%=booking.start_date%></p>
        <div class="d-flex justify-content-center">
         <%=link_to "Accept", booking_accept_path(booking), class:"btn btn-primary mr-2"%> <%=link_to "Decline", booking_decline_path(booking), class:"btn btn-primary mr-2"%>
        </div>
      </div>
    <%end%>
    <% end %>
    </div>
  </div>
  </div>
</div>
<%end%>


</div>